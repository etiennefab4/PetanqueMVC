@using Petanque.Web.Extensions
@model Petanque.Web.Models.CompetitionDto
@{
    ViewBag.Title = "Modifier Concours";
    Layout = "../Shared/_Layout.cshtml";
}
<div>
    @using (Html.BeginForm("Edit", "Competition", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <div class="control-group">
                @Html.LabelFor(x => x.Nom, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(x => x.Nom, new { @class = "input-xlarge" })
                </div>
            </div>
        </fieldset>
        @Html.Partial("IndexTeam", Model.TeamDtos)
        <p>
            @Html.ActionLink("Add Team", "AddTeamInCompetition", "Team", new { competitionId = Model.Id }, null)
        </p>
        <p>
            @Html.ActionLink("Démarrer Concours", "StartCompetition", "Competition", new { id = Model.Id }, null)
        </p>
        <p>
            @Html.ActionLink("Voir Tournoi", "GetTree", "Competition", new { id = Model.Id }, null)
        </p>
        
        <p>
            <input type="submit" value="Save" />
        </p>
    }
</div>
