<html>
<head id="header">
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>@*    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bracket.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/libs/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/libs/modernizr-2.5.3.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">P-Tank</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="#">Acceuil</a></li>
                        @if (!string.IsNullOrEmpty(ViewBag.MainCompetitionId))
                        {
                            <li>@Html.ActionLink("Concours Principal", "GetTree", "Competition", new { isCrying = false }, null)</li>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.CryingCompetitionId))
                        {
                            <li>@Html.ActionLink("Consolante", "GetTree", "Competition", new { isCrying = true }, null)</li>
                        }
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        <h1>@Html.ActionLink("P-TANK", "Index", "Home")</h1>
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </div>
    <script src="@Url.Content("~/Scripts/plugins.js")"></script>
    <script src="@Url.Content("~/Scripts/script.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-transition.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-alert.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-modal.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-scrollspy.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tab.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tooltip.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-popover.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-button.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-collapse.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-carousel.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-typeahead.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tab.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-tooltip.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-popover.js")"></script>
</body>
</html>
